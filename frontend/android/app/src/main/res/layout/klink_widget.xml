<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Content Layout (shown when data is available) -->
    <LinearLayout
        android:id="@+id/widget_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <!-- Header with user info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:text="User Name" />

                <TextView
                    android:id="@+id/widget_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#888888"
                    android:textSize="12sp"
                    android:text="@username" />
            </LinearLayout>

            <TextView
                android:id="@+id/widget_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="11sp"
                android:text="2h ago" />
        </LinearLayout>

        <!-- Image -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/widget_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/image_background"
                android:visibility="visible" />

            <TextView
                android:id="@+id/widget_no_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#888888"
                android:textSize="14sp"
                android:text="No image"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Content/Caption -->
        <TextView
            android:id="@+id/widget_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:paddingTop="8dp"
            android:text="Post content goes here..." />

        <!-- KLink branding -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KLink"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="8dp" />
    </LinearLayout>

    <!-- No Data Layout (shown when no posts available) -->
    <TextView
        android:id="@+id/widget_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#888888"
        android:textSize="14sp"
        android:text="No posts available"
        android:visibility="gone" />

</LinearLayout>
